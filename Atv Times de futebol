#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    setlocale(LC_ALL, "Portuguese");

    float peso=0,menor_p=0,altura=0,media_a=0;
    int p,t,a,i,media_i[3],idade=0;

    media_i[0]=0;
    media_i[1]=0;
    media_i[2]=0;

      for(t=1;t<33;t++)
      {
            if(t<=11)
            {
             printf("Jogadores do time 1 \n");
            }

            if(t<=22)
            {
             printf("Jogadores do time 2 \n");
            }

            if(t>22)
            {
             printf("Jogadores do time 3 \n");
            }

        printf("\n Informe seu peso?\n ");
        scanf("%f",&peso);

            if(peso<menor_p)
            {
                menor_p=peso;
            }


        printf("\n Informe sua altura? \n");
        scanf("%f",&altura);

        media_a=media_a+altura;



        printf("\n Informe sua idade? \n");
            scanf("%d",&idade);

            if(t<=11)
            {
             media_i[0]=media_i[0]+idade;
            }

            if(t<=22)
            {
             media_i[1]=media_i[1]+idade;
            }

            if(t>22)
            {
             media_i[2]=media_i[2]+idade;
            }

        system("cls");

      }
    media_i[0]=media_i[0]/11;
    media_i[1]=media_i[1]/11;
    media_i[2]=media_i[2]/11;

    media_a=media_a/33;

    printf("O peso do jogador mais magro do campeonato é %.2f\n",menor_p);
    printf("A média das idades dos jogadores de cada time é Time 1 %d,Time 2 %d,Time 3 %d\n",media_i[0],media_i[1],media_i[2]);
    printf("Média das altura do jogadores do campeonato é %.2f\n",media_a);
}
